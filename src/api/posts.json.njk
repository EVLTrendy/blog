---
permalink: /api/posts.json
eleventyExcludeFromCollections: true
---
{
  "blog": [
    {% for post in collections.blog %}
    {
      "id": "{{ post.fileSlug }}",
      "title": "{{ post.data.title | replace('"', '\\"') }}",
      "description": "{{ post.data.description | replace('"', '\\"') | default('') }}",
      "date": "{{ post.date | date('YYYY-MM-DD') }}",
      "author": "{{ post.data.author | default('EvolvedLotus Team') }}",
      "tags": {{ post.data.tags | default([]) | dump }},
      "category": "{{ post.data.category | default('') }}",
      "featured": {{ post.data.featured | default(false) }},
      "image": "{{ post.data.image | default('') }}",
      "imageAlt": "{{ post.data.imageAlt | default('') }}",
      "url": "{{ post.url }}",
      "readingTime": "{{ post.data.readingTime | default('5 min read') }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "hubs": [
    {% for hub in collections.hubs %}
    {
      "id": "{{ hub.fileSlug }}",
      "title": "{{ hub.data.title | replace('"', '\\"') }}",
      "description": "{{ hub.data.description | replace('"', '\\"') | default('') }}",
      "platform": "{{ hub.data.hubCollection | default('misc') }}",
      "url": "{{ hub.url }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "authors": [
    {% for author in collections.authors %}
    {
      "id": "{{ author.fileSlug }}",
      "name": "{{ author.data.name | replace('"', '\\"') }}",
      "bio": "{{ author.data.bio | replace('"', '\\"') | default('') }}",
      "role": "{{ author.data.role | default('Content Creator') }}",
      "expertise": {{ author.data.expertise | default([]) | dump }},
      "social": {{ author.data.social | default({}) | dump }},
      "avatar": "{{ author.data.avatar | default('') }}",
      "url": "{{ author.url }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "pages": [
    {% for page in collections.pages %}
    {
      "id": "{{ page.fileSlug }}",
      "title": "{{ page.data.title | replace('"', '\\"') }}",
      "description": "{{ page.data.description | replace('"', '\\"') | default('') }}",
      "layout": "{{ page.data.layout | default('page') }}",
      "url": "{{ page.url }}"
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "notifications": [
    {% for notification in collections.notifications %}
    {
      "id": "{{ notification.fileSlug }}",
      "title": "{{ notification.data.title | replace('"', '\\"') }}",
      "description": "{{ notification.data.description | replace('"', '\\"') | default('') }}",
      "date": "{{ notification.date | date('YYYY-MM-DD') }}",
      "link": "{{ notification.data.link | default('') }}",
      "tags": {{ notification.data.tags | default([]) | dump }}
    }{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "stats": {
    "totalBlogPosts": {{ collections.blog.length }},
    "totalHubs": {{ collections.hubs.length }},
    "totalAuthors": {{ collections.authors.length }},
    "totalPages": {{ collections.pages.length }},
    "totalNotifications": {{ collections.notifications.length }},
    "lastUpdated": "{{ 'now' | date('YYYY-MM-DD HH:mm') }}"
  }
}
