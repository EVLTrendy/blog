<header>
  <div class="evl-navcontainer">
    <div class="evl-leftnav">
      <a href="https://www.evolvedlotus.com" aria-label="EvolvedLotus Home">
        <svg class="evl-SVGLogo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
          <path d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM199.4 312.6c-31.2-31.2-31.2-81.9 0-113.1s81.9-31.2 113.1 0c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9c-50-50-131-50-181 0s-50 131 0 181s131 50 181 0c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0c-31.2 31.2-81.9 31.2-113.1 0z"/>
        </svg>
      </a>
    </div>
    <div class="evl-rightnav">
      <div class="evl-navtxtgroup">
        <div class="evl-navdivtxt">
          <a href="/">
            <span class="evl-navtxt">{{ 'nav.home' | i18n(lang) }}</span>
          </a>
        </div>
        <div class="evl-navdivtxt">
          <a href="/blog">
            <span class="evl-navtxt">{{ 'nav.blog' | i18n(lang) }}</span>
          </a>
        </div>
        <div class="evl-navdivtxt">
          <a href="https://www.evolvedlotus.com/#cusection">
            <span class="evl-navtxt">{{ 'nav.contact' | i18n(lang) }}</span>
          </a>
        </div>
        <div class="evl-navdivtxt">
          <a href="https://tools.evolvedlotus.com">
            <span class="evl-navtxt">{{ 'nav.tools' | i18n(lang) }}</span>
          </a>
        </div>
        <div class="evl-navdivtxt">
           {% include "language-switcher.njk" %}
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Header CSS -->
<style>
  header {
    padding-bottom: 5px;
  }

  .evl-SVGLogo {
    height: 50px;
    width: 50px;
  }

  .evl-navcontainer {
    display: flex;
    width: 100%;
    height: 100px;
    padding-bottom: 10px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    background-color: white;
  }

  .evl-leftnav,
  .evl-rightnav {
    display: flex;
    width: 50%;
  }

  .evl-rightnav {
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .evl-navtxtgroup {
    display: flex;
    margin-right: -90px;
  }

  .evl-navdivtxt {
    color: black;
    padding-left: 5px;
    padding-right: 5px;
    padding-top: 50px;
  }

  .evl-navtxt {
    font-size: 24px;
    color: black;
    border-radius: 20px;
    padding-left: 10px;
    padding-right: 10px;
    display: inline-block;
    font-size: 24px;
    align-content: center;
    justify-content: center;
    border: solid black 2px;
    border-radius: 10px;
    text-decoration: none;
  }
</style>

<!-- Mobile header overrides -->
<style>
*,*::before,*::after{box-sizing:border-box}
html,body{overflow-x:hidden}

@media (max-width:480px){
  header{overflow:hidden;}
  .evl-leftnav{flex:0 0 auto;}
  .evl-rightnav{flex:1 1 0;overflow-x:auto;}
  .evl-navcontainer{height:56px;padding:0 4px 2px 4px;box-sizing:border-box;}
  .evl-SVGLogo{height:24px;width:24px;margin-left:2px !important;}
  .evl-navtxtgroup{margin-right:0;gap:2px;flex-wrap:nowrap;justify-content:flex-start;}
  .evl-navdivtxt{padding-top:22px;}
  .evl-navtxt{font-size:10px;padding:1px 3px;border-width:1px;}
}
</style>
