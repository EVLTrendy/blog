<!-- Header CSS -->
<style>
  header {
    padding-bottom: 5px;
    position: relative;
    z-index: 1000;
  }

  .evl-SVGLogo {
    height: 50px;
    width: 50px;
  }

  .evl-navcontainer {
    display: flex;
    width: 100%;
    height: 100px;
    padding-bottom: 10px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    background-color: white;
    align-items: center;
    justify-content: space-between;
    padding-left: 20px;
    padding-right: 20px;
  }

  .evl-leftnav {
    display: flex;
    align-items: center;
  }

  .evl-rightnav {
    display: flex;
    align-items: center;
  }

  .evl-navtxtgroup {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .evl-navdivtxt {
    color: black;
  }

  .evl-navtxt {
    font-size: 18px;
    color: black;
    padding: 8px 16px;
    display: inline-block;
    border: solid black 2px;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .evl-navtxt:hover {
    background-color: #f0f0f0;
    transform: translateY(-2px);
  }

  /* Hamburger Menu Styles */
  .hamburger-menu {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 30px;
    height: 25px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
  }

  .hamburger-line {
    width: 30px;
    height: 3px;
    background: black;
    border-radius: 10px;
    transition: all 0.3s linear;
    position: relative;
    transform-origin: 1px;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .evl-navcontainer {
      height: 70px;
      padding: 0 15px;
    }

    .evl-SVGLogo {
      height: 40px;
      width: 40px;
    }

    .hamburger-menu {
      display: flex;
    }

    .evl-rightnav {
      position: absolute;
      top: 70px;
      left: 0;
      width: 100%;
      background-color: white;
      flex-direction: column;
      align-items: center;
      padding: 20px 0;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      transform: translateY(-150%);
      transition: transform 0.3s ease-in-out;
      opacity: 0;
      pointer-events: none;
    }

    .evl-rightnav.active {
      transform: translateY(0);
      opacity: 1;
      pointer-events: all;
    }

    .evl-navtxtgroup {
      flex-direction: column;
      width: 100%;
      gap: 15px;
    }

    .evl-navdivtxt {
      width: 100%;
      text-align: center;
      padding: 0;
    }

    .evl-navtxt {
      display: block;
      width: 80%;
      margin: 0 auto;
      text-align: center;
    }

    /* Hamburger Animation */
    .hamburger-menu.active .hamburger-line:first-child {
      transform: rotate(45deg);
    }

    .hamburger-menu.active .hamburger-line:nth-child(2) {
      opacity: 0;
    }

    .hamburger-menu.active .hamburger-line:nth-child(3) {
      transform: rotate(-45deg);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.querySelector('.hamburger-menu');
    const nav = document.querySelector('.evl-rightnav');

    if (hamburger && nav) {
      hamburger.addEventListener('click', function() {
        hamburger.classList.toggle('active');
        nav.classList.toggle('active');
        
        const isExpanded = hamburger.classList.contains('active');
        hamburger.setAttribute('aria-expanded', isExpanded);
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(event) {
        if (!hamburger.contains(event.target) && !nav.contains(event.target) && nav.classList.contains('active')) {
          hamburger.classList.remove('active');
          nav.classList.remove('active');
          hamburger.setAttribute('aria-expanded', 'false');
        }
      });
    }
  });
</script>
