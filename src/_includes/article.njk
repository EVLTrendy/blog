---
layout: 'base.njk'
---
<section class="articlesection">
  <div class="imagediv">
    <img src="{{ image }}" alt="{{ imageAlt }}">
  </div>
  <h3 class="article_title">{{ title }}</h3>
  <p class="article_meta">By <span>{{ author }}</span> on <span>{{ post.data.date }}</span></p>
  <p class="article_body">{{ post.data.body }}</p>
</section>