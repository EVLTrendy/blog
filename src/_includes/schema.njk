<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": "{{ metadata.url }}/#organization",
      "name": "{{ metadata.title }}",
      "url": "{{ metadata.url }}",
      "logo": {
        "@type": "ImageObject",
        "url": "{{ metadata.url }}/assets/images/logo.png",
        "width": 512,
        "height": 512
      },
      "sameAs": [
        "https://twitter.com/{{ metadata.author.twitter }}",
        "https://www.facebook.com/evolvedlotus",
        "https://www.instagram.com/evolvedlotus",
        "https://www.linkedin.com/company/evolvedlotus"
      ]
    },
    {
      "@type": "WebSite",
      "@id": "{{ metadata.url }}/#website",
      "url": "{{ metadata.url }}",
      "name": "{{ metadata.title }}",
      "description": "{{ metadata.description }}",
      "publisher": {
        "@id": "{{ metadata.url }}/#organization"
      },
      "inLanguage": "en-US"
    },
    {
      "@type": "BreadcrumbList",
      "@id": "{{ metadata.url }}{{ page.url }}#breadcrumb",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "{{ metadata.url }}"
        }
        {% if page.url != '/' %}
        ,{
          "@type": "ListItem",
          "position": 2,
          "name": "{{ title or metadata.title }}",
          "item": "{{ metadata.url }}{{ page.url }}"
        }
        {% endif %}
      ]
    },
    {
      "@type": "{{ schema_type if schema_type else 'WebPage' }}",
      "@id": "{{ metadata.url }}{{ page.url }}#webpage",
      "url": "{{ metadata.url }}{{ page.url }}",
      "name": "{{ title or metadata.title }}",
      "isPartOf": {
        "@id": "{{ metadata.url }}/#website"
      },
      "about": {
        "@id": "{{ metadata.url }}/#organization"
      },
      "description": "{{ description or metadata.description }}",
      "breadcrumb": {
        "@id": "{{ metadata.url }}{{ page.url }}#breadcrumb"
      },
      "inLanguage": "en-US",
      "potentialAction": [
        {
          "@type": "ReadAction",
          "target": [
            "{{ metadata.url }}{{ page.url }}"
          ]
        }
      ]
    }
    {% if layout == 'post.njk' or layout == 'article.njk' or tags and 'post' in tags %}
    ,{
      "@type": "BlogPosting",
      "@id": "{{ metadata.url }}{{ page.url }}#article",
      "isPartOf": {
        "@id": "{{ metadata.url }}{{ page.url }}#webpage"
      },
      "author": {
        "@type": "Person",
        "name": "{{ author or metadata.author.name }}",
        "url": "{{ metadata.url }}/authors/{{ author | slugify }}/"
      },
      "headline": "{{ title }}",
      "datePublished": "{{ date | isoDate }}",
      "dateModified": "{{ date | isoDate }}",
      "mainEntityOfPage": {
        "@id": "{{ metadata.url }}{{ page.url }}#webpage"
      },
      "publisher": {
        "@id": "{{ metadata.url }}/#organization"
      },
      "image": {
        "@type": "ImageObject",
        "url": "{% if image %}{{ metadata.url }}{{ image }}{% else %}{{ metadata.url }}/assets/blog/default-og-image.jpg{% endif %}"
      },
      "articleSection": "{{ tags | join(', ') }}",
      "inLanguage": "en-US"
    }
    {% endif %}
  ]
}
</script>
