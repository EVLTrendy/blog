<article class="article-snippet">
    <div class="article-snippet-image">
        <img src="{{post.data.image}}" alt="{{post.data.imageAlt}}" loading="lazy">
    </div>
    <div class="article-snippet-content">
        <h3 class="article-snippet-title">
            <a href="{{post.url}}">{{ post.data.title }}</a>
        </h3>
        <p class="article-snippet-description">{{post.data.description}}</p>
        <div class="article-snippet-meta">
            <span class="article-snippet-date">{{post.date | postDate}}</span>
            <span class="article-snippet-author">By {{post.data.author}}</span>
        </div>
    </div>
</article>