    </div>
    
    <div class="section-tabs">
      <a href="/blog/?sort=trending" class="tab-button active">Trending Now</a>
      <a href="/blog/?sort=popular" class="tab-button">Most Shared</a>
      <a href="/blog/?sort=new" class="tab-button">New This Week</a>
      <a href="/blog/?sort=favorites" class="tab-button">Reader Favorites</a>
    </div>
    
    <div class="featured-grid">
      {% set featuredPosts = collections.blog | filterByTag('featured') | reverse | limit(6) %}
      {% if featuredPosts.length === 0 %}
        {% set featuredPosts = collections.blog | reverse | limit(6) %}
      {% endif %}
      {% for post in featuredPosts %}
      <a href="{{ post.url }}" class="featured-card">
        <img src="{{ post.data.image | default('/assets/images/default-blog.png') }}" 
             alt="{{ post.data.imageAlt | default(post.data.title) }}" 
             class="featured-image"
             loading="lazy"
             width="400"
             height="225">
        <div class="featured-content">
          <span class="featured-badge">Featured</span>
          <h3 class="featured-title">{{ post.data.title }}</h3>
          <p class="featured-description">{{ post.data.description | truncate(120) }}</p>
          <div class="featured-meta">
            <span class="meta-item">{{ post.data.date | dateFormat }}</span>
            <span class="meta-item">{{ post.data.readingTime | default('5 min read') }}</span>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>

