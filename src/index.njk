---
title: Home page
layout: 'base.njk'
---

<div class="maindiv">
  <div class="spacediv20"></div>
  <div class="maingroupdiv">
    <div class="mainl">
      <div class="maintxtcon">
        <div class="maintxth">Discover EvolvedLotus</div>
        <div class="maintxts">Unveiling Resources, Insights, and Creative Journeys</div>
      </div>
    </div>
    <div class="mainr">
      <div class="mainrdivdisplay">
        <img class="mainrdisplay" src="https://picsum.photos/200" alt="">
      </div>
    </div>
  </div>
</div>
<div class="featurediv">
  <div class="ftbacksplash">
    <div class="split-container">
      <!-- Left side: Notifications -->
      <div class="notifications-section">
        <h2 class="section-title">Latest Updates</h2>
        <div class="notifications-slideshow">
          <div class="notifications-slider">
            <!-- Latest Blog Post Slide (Fixed) -->
            {%- for post in collections.post | reverse -%}
              {% if loop.first %}
              <div class="notification-item latest-post">
                <a href="{{ post.url }}" class="latest-post-link">
                  <div class="notification-content">
                    <span class="latest-badge">Latest Post</span>
                    <div class="latest-post-image">
                      <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" loading="lazy">
                    </div>
                    <h3>{{ post.data.title }}</h3>
                    <p>{{ post.data.description }}</p>
                  </div>
                </a>
              </div>
              {% endif %}
            {%- endfor -%}
            
            <!-- Regular Notification Slides -->
            {%- for notification in collections.notifications -%}
            <div class="notification-item">
              <div class="notification-content">
                <h3>{{ notification.data.title }}</h3>
                <p>{{ notification.data.description }}</p>
                {% if notification.data.link %}
                <a href="{{ notification.data.link }}" class="notification-link">Learn More</a>
                {% endif %}
              </div>
            </div>
            {%- endfor -%}
          </div>
          <div class="slider-controls">
            <div class="slider-dots"></div>
          </div>
        </div>
      </div>
      
      <!-- Right side: Browse All -->
      <div class="browse-section">
        <h2 class="section-title">Browse Articles</h2>
        <p class="browse-description">Explore our complete collection of articles, tutorials, and insights.</p>
        <a href="https://blog.evolvedlotus.com/blog/" class="browse-button">Browse All Articles</a>
      </div>
    </div>
  </div>
</div>