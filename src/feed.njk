---
permalink: feed.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>EvolvedLotus Blog</title>
  <subtitle>Tech, Tutorials, and More</subtitle>
  <link href="https://blog.evolvedlotus.com/feed.xml" rel="self"/>
  <link href="https://blog.evolvedlotus.com/"/>
  <updated>{{ collections.blog | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
  <id>https://blog.evolvedlotus.com/</id>
  <author>
    <name>EvolvedLotus</name>
  </author>
  {%- for post in collections.blog | reverse %}
  {% set absolutePostUrl %}{{ post.url | url | absoluteUrl("https://blog.evolvedlotus.com") }}{% endset %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ absolutePostUrl }}"/>
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">
      <![CDATA[
      {% if post.data.image %}
      <img src="{{ post.data.image | url | absoluteUrl("https://blog.evolvedlotus.com") }}" alt="{{ post.data.imageAlt }}" />
      {% endif %}
      {{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}
      ]]>
    </content>
  </entry>
  {%- endfor %}
</feed>
